<% include ../partials/header %>
	
    <div class="row">
		<div class="col-md-12">

			<form class="form" action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
			    <h1 class="h3 mb-3 font-weight-normal">Edit Your Profile</h1>
				<div class="form-group">
					<label for="inputImage" class="sr-only">Avatar Image</label>
					<input type="file" id="inputImage" name="image" accept="image/*">
				</div>
				<div class="form-group">
					<label for="inputFirstName" class="sr-only">First Name</label>
			    	<input type="text" id="inputFirstName" class="form-control" name="user[firstName]" value="<%= user.firstName %>">
				</div>
				<div class="form-group">
					<label for="inputLastName" class="sr-only">Last Name</label>
			    	<input type="text" id="inputLastName" class="form-control" name="user[lastName]" value="<%= user.lastName %>">
				</div>
				<div class="form-group">
					<label for="inputEmail" class="sr-only">E-mail</label>
			    	<input type="email" id="inputEmail" class="form-control" name="user[email]" value="<%= user.email %>" required>
				</div>
				<div class="form-group">
					<label for="inputLocation" class="sr-only">Location</label>
			    	<input type="text" id="inputLocation" class="form-control" name="user[location]" value="<%= user.location %>">
				</div>
				<div class="form-group">
					<label for="inputAboutMe" class="sr-only">About Me</label>
			    	<textarea id="inputAboutMe" class="form-control" name="user[aboutMe]" rows="3"> <%= user.aboutMe %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit Changes</button>
				</div>
			    	
			</form>
			<div class="form-signin">
				<a class="btn btn-sm btn-danger" href="/collections" role="button">Go Back</a>
			</div>
        </div>

    </div>

<% include ../partials/footer %>