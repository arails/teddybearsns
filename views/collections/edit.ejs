<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= collection.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/collections/<%= collection._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="collection[name]" value="<%= collection.name %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="collection[description]" value="<%= collection.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-sm btn-caution" href="/collections">Go Back</a>
        </div>

    </div>
    
</div>
<% include ../partials/footer %>