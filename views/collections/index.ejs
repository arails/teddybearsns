<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container white-bg">
            <h1>Welcome To WeBears</h1>
            <p>View user-curated teddy bear collections from all over the world!</p>
            <p>
                <a class="btn btn-info btn-lg" href="/collections/new">Create your collection now!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Collections!</h3>
        </div>

        <% collections.forEach(function(collection){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= collection.image %>">
                    <div class="caption">
                        <h4><%= collection.name %></h4>
                    </div>
                    <p>
                        <a href="/collections/<%= collection._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>