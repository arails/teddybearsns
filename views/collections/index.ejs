<% include ../partials/header %>

	<header class="jumbotron">
        <div class="container">
            <h1>Welcome To WeBears</h1>
            <p>View user-curated teddy bear collections from all over the world!</p>
            <p>
                <a class="btn btn-info btn-lg" href="/collections/new">Create your collection now!</a>
            </p>
			<p>
				<form action="/collections" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Collection name..." class="form-control">
						<input type="submit" value ="Search" class="btn btn-md btn-primary ml-1">
					</div>
			</form>
			</p>
        </div>
    </header>
    
    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Our Most Popular Collections!</h3>
			<% if(noMatch !== null) { %>
			<h3><%= noMatch %></h3>
			<% } %>
        </div>

        <% collections.forEach(function(collection){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				<div class="card">
				  <img src="<%= collection.image %>" class="card-img-top" alt="<%= collection.name %>">
				  <div class="card-body">
					<h5 class="card-title"><%= collection.name %></h5>
					<!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
					<a href="/collections/<%= collection._id %>" class="btn btn-primary">View Collection</a>
				  </div>
				</div>
            </div>
        <% }) %>
    </div>

<% include ../partials/footer %>